<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <TextView
        android:id="@+id/positive_reviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:drawableStart="@drawable/ic_thumb"
        android:drawablePadding="12dp"
        tools:text="99% positive reviews"
        style="@style/CourseInfoTextStyle" />

    <TextView
        android:id="@+id/lessonsNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/positive_reviews"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/ic_multimedia"
        android:drawablePadding="12dp"
        tools:text="16 lessons"
        style="@style/CourseInfoTextStyle" />

    <TextView
        android:id="@+id/studentNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/lessonsNumber"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/ic_person"
        android:drawablePadding="12dp"
        tools:text="10404 students"
        style="@style/CourseInfoTextStyle" />

    <TextView
        android:id="@+id/audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/studentNumber"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/ic_audio"
        android:drawablePadding="12dp"
        tools:text="Audio: Spanish"
        style="@style/CourseInfoTextStyle" />

    <TextView
        android:id="@+id/subtitles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/audio"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/ic_cc"
        android:drawablePadding="12dp"
        tools:text="Spanish / English"
        style="@style/CourseInfoTextStyle" />

    <TextView
        android:id="@+id/level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/subtitles"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/ic_level"
        android:drawablePadding="12dp"
        tools:text="Level"
        android:text="@string/level"
        style="@style/CourseInfoTextStyle" />

    <TextView
        android:id="@+id/level_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@id/level"
        app:layout_constraintStart_toEndOf="@id/level"
        android:layout_marginStart="8dp"
        tools:text="BEGINNER"
        android:text="@string/level"
        style="@style/SkillLevelTextStyle" />

</androidx.constraintlayout.widget.ConstraintLayout>
